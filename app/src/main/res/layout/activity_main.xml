<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/bg"
    >



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/nagadtxtid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="15dp"
                android:text="নগদ "
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nagad2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nagadtxtid"
                android:layout_centerInParent="true"
                android:text="ডাক বিভাগের ডিজিটাল লেনদেন "
                android:textColor="@color/white" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="18dp"
                android:src="@drawable/bell"
                />

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="50dp"
                android:layout_width="170dp"
                android:layout_height="25dp"
                android:layout_below="@+id/nagad2"
                android:layout_centerInParent="true"
                android:layout_marginTop="40dp"
                >

                <LinearLayout
                    android:id="@+id/balance"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >

                    <TextView

                        android:id="@+id/taka"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="90,000"
                       android:layout_gravity="center"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:visibility="gone"
                        android:alpha="0"
                        />


                    <ImageView
                        android:id="@+id/picbl"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="5dp"
                        android:alpha="1"
                        android:src="@drawable/balanceicon"
                    />

                    <TextView

                        android:id="@+id/tapforbalancetxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="tap for balance"
                        android:textStyle="bold"
                        android:layout_marginLeft="20dp"
                         />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview2"
                app:cardCornerRadius="10dp"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_below="@+id/nagad2"
                android:layout_centerInParent="true"
                android:layout_marginTop="130dp"

                >

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:orientation="vertical"
                     android:layout_margin="3dp"
                     android:weightSum="3"
                     android:background="@drawable/cardviewdesign"
                     >


                     <LinearLayout
                         android:layout_weight="1"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:orientation="horizontal"
                         android:weightSum="2"
                         >

                         <LinearLayout
                             android:layout_width="wrap_content"
                             android:layout_height="100dp"
                             android:orientation="vertical"
                             android:layout_weight="1"
                             android:gravity="center"
                             >
                             <ImageView
                                 android:layout_width="60dp"
                                 android:layout_height="60dp"
                                 android:src="@drawable/ic_cash_in"
                                 android:layout_gravity="center"
                                 />
                             <TextView
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:layout_gravity="center"
                                 android:text="এম টু পি "
                                 />
                             <View
                                 android:layout_width="125dp"
                                 android:layout_height="1dp"
                                 android:background="#807A7A"
                                 android:layout_gravity="center"
                                 />

                         </LinearLayout>

                         <View
                             android:layout_width="1dp"
                             android:layout_height="80dp"
                             android:background="#807A7A"
                             android:layout_gravity="center"
                             />

                         <LinearLayout

                             android:gravity="center"
                             android:layout_width="wrap_content"
                             android:layout_height="100dp"
                             android:orientation="vertical"
                             android:layout_weight="1"
                             >

                             <ImageView
                                 android:layout_width="60dp"
                                 android:layout_height="60dp"
                                 android:src="@drawable/ic_b2b"
                                 />
                             <TextView
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:text="স্টেটমেনট"
                                 />
                             <View
                                 android:layout_width="125dp"
                                 android:layout_height="1dp"
                                 android:background="#807A7A"
                                 android:layout_gravity="center"
                                 />


                         </LinearLayout>


                     </LinearLayout>



                     <LinearLayout
                       android:layout_weight="1"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:orientation="horizontal"
                         android:weightSum="2"
                         >


                         <LinearLayout
                             android:layout_width="wrap_content"
                             android:layout_height="100dp"
                             android:orientation="vertical"
                             android:layout_weight="1"
                             android:gravity="center"
                             >

                             <ImageView
                                 android:layout_width="60dp"
                                 android:layout_height="60dp"
                                 android:src="@drawable/shadhin"
                                 android:layout_gravity="center"
                                 />
                             <TextView
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:layout_gravity="center"
                                 android:text="স্বাধীন"
                                 />

                             <View
                                 android:layout_width="125dp"
                                 android:layout_height="1dp"
                                 android:background="#807A7A"
                                 android:layout_gravity="center"
                                 />

                         </LinearLayout>

                         <View
                             android:layout_width="1dp"
                             android:layout_height="80dp"
                             android:background="#807A7A"
                             android:layout_gravity="center"
                             />


                         <LinearLayout

                             android:gravity="center"
                             android:layout_width="wrap_content"
                             android:layout_height="100dp"
                             android:orientation="vertical"
                             android:layout_weight="1"
                             >

                             <ImageView
                                 android:layout_width="60dp"
                                 android:layout_height="60dp"
                                 android:src="@drawable/ic_registration"
                                 />
                             <TextView
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:text="নিবন্ধন"
                                 />

                             <View
                                 android:layout_width="125dp"
                                 android:layout_height="1dp"
                                 android:background="#807A7A"
                                 android:layout_gravity="center"
                                 />

                         </LinearLayout>

                     </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:orientation="horizontal"
                         android:weightSum="2"
                         >

                        <LinearLayout
                             android:layout_width="wrap_content"
                             android:layout_height="100dp"
                             android:orientation="vertical"
                             android:layout_weight="1"
                             android:gravity="center"
                             >

                            <ImageView
                                 android:layout_width="60dp"
                                 android:layout_height="60dp"
                                 android:src="@drawable/ic_transaction_history"
                                 android:layout_gravity="center"
                                 />
                             <TextView
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:layout_gravity="center"
                                 android:text="বিবরনি"
                                 />


                         </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="80dp"
                            android:background="#807A7A"
                            android:layout_gravity="center"
                            />


                        <LinearLayout

                             android:gravity="center"
                             android:layout_width="wrap_content"
                             android:layout_height="100dp"
                             android:orientation="vertical"
                             android:layout_weight="1"
                             >

                             <ImageView
                                 android:layout_width="60dp"
                                 android:layout_height="60dp"
                                 android:src="@drawable/bill_list"
                                 />
                             <TextView
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:text="বিল পে"
                                 />


                         </LinearLayout>

                     </LinearLayout>



                     </LinearLayout>



            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
               android:layout_alignParentBottom="true"
              android:orientation="horizontal"
                android:weightSum="4"
                android:padding="2dp"

                >
                <ImageView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/home"
                    />
                <ImageView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/transaction"
                    />
                <ImageView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/people"
                    />
                <ImageView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/mynagad"
                    />


            </LinearLayout>


        </RelativeLayout>





</LinearLayout>